<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_normal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xsmall">

        <TextView
            android:id="@+id/notification_list_image_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/notification_list_image_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/notification_list_image_proxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:padding="@dimen/proximity_margin"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/notification_list_image_timestamp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_list_image_imageview"
            android:layout_width="@dimen/notification_thumbnail"
            android:layout_height="@dimen/notification_thumbnail" />

        <TextView
            android:id="@+id/notification_list_image_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/textsize_medium"
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:gravity="center_vertical"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>