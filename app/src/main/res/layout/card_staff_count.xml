<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/staff_count_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_elevation"
    android:layout_marginLeft="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_normal"
    android:layout_marginRight="@dimen/margin_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/info_card_background">

            <ImageView
                android:id="@+id/staff_count_card_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/staff"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_xlarge"
                android:textColor="@color/button_textcolor"
                android:text="@string/staff_count_card_title"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/staff_count_card_imageview"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginRight="@dimen/margin_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:text="@string/staff_count_card_working_title"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/staff_count_card_working_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/textsize_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:text="@string/staff_count_card_break_title"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/staff_count_card_break_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>